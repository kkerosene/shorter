@{
    Layout = "_Layout";
    ViewData["Title"] = "About Short.Er";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-3 shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title text-center mb-0">our URL shortening technology</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-link-45deg display-4 text-primary"></i>
                    </div>
                    <div class="row">
                        <div class="col-md-10 mx-auto">
                            <div class="timeline">
                                <div class="timeline-step">
                                    <div class="timeline-icon bg-primary">1</div>
                                    <h6 class="mt-2">generate unique code</h6>
                                    <p class="text-muted">
                                        our system creates a random 6-character code using letters (A-Z, a-z)
                                        and numbers (0-9) - over 56 billion possible combinations!
                                    </p>
                                </div>

                                <div class="timeline-step">
                                    <div class="timeline-icon bg-primary">2</div>
                                    <h6 class="mt-2">ensure uniqueness</h6>
                                    <p class="text-muted">
                                        we immediately check against all existing links to guarantee
                                        your short URL is completely unique
                                    </p>
                                </div>

                                <div class="timeline-step">
                                    <div class="timeline-icon bg-primary">3</div>
                                    <h6 class="mt-2">instant redirection</h6>
                                    <p class="text-muted">
                                        when someone uses your short link, they're securely redirected
                                        to the original URL within milliseconds
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4">
                        <h5 class="alert-heading">key features</h5>
                        <ul class="mb-0">
                            <li>automatic click tracking</li>
                            <li>24/7 link monitoring</li>
                            <li>custom short URLs available for registered users</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 3rem;
    }

    .timeline-step {
        position: relative;
        margin-bottom: 2.5rem;
    }

    .timeline-icon {
        position: absolute;
        left: -4.5rem;
        top: 0;
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
    }

    .timeline-step:not(:last-child):after {
        content: "";
        position: absolute;
        left: -3.2rem;
        top: 3rem;
        bottom: -2.5rem;
        width: 2px;
        background: #dee2e6;
    }
</style>